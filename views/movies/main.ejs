            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 10px;
        }

        .movie-year {
            color: #999;
            font-size: 14px;
        }

        .movie-rating {
            background: #e50914;
            color: #fff;
            padding: 2px 8px;
            border-radius: 15px;
            font-size: 12px;
            font-weight: bold;
        }

        .movie-genre {
            color: #ccc;
            font-size: 13px;
            margin-bottom: 10px;
        }

        .movie-actions {
            display: flex;
            gap: 10px;
        }

        .btn-watch,
        .btn-download {
            flex: 1;
            padding: 8px 12px;
            border: none;
            border-radius: 5px;
            font-size: 13px;
            font-weight: bold;
            transition: all 0.3s ease;
            text-decoration: none;
            text-align: center;
            display: inline-block;
        }

        .btn-watch {
            background: #e50914;
            color: #fff;
        }

        .btn-watch:hover {
